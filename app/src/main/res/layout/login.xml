<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/popuplayoutPw"
    android:foreground="@drawable/shape_window_dim"
    tools:context="cleanpress.cleanpress.Login">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/backTochangeLogin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/android_icn"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34000000"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:background="#00ffffff"
            android:id="@+id/logEmail"
            android:paddingEnd="0dp"
            android:gravity="center"
            android:paddingRight="0dp"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="Email"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="#00ffffff"
            android:id="@+id/logPass"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:gravity="center"
            android:paddingRight="0dp"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="Password"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Forgot Password?"
        android:gravity="center"
        android:id="@+id/forgotTitle"
        android:textSize="14sp"
        android:textColor="#fff"
        android:clickable="true"
        android:onClick="showPopupForgot"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#fff"
        android:text="Log in"
        android:background="#03e1ed"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="80dp"
        android:onClick="logInApp"
        />

</LinearLayout>
</FrameLayout>
