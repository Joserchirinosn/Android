<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="cleanpress.cleanpress.About">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#03e1ed"
                android:text="Clean Press"
                android:textSize="20dp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="0dp"
                />

            <TextView
                android:id="@+id/who_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="16sp"
                android:layout_marginTop="0dp"
                android:textColor="#73739f"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_phone"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:textColor="#73739f"
                android:gravity="center"
                />

            <WebView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/webView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <Button
                style="@style/TextViewsWithBackColor"
                android:id="@+id/terms_btn"
                android:layout_marginTop="45dp"
                android:text="Terms of Use" />

            <Button
                style="@style/TextViewsWithBackColor"
                android:id="@+id/wp_btn"
                android:layout_marginTop="0dp"
                android:text="Privacy Policy" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

