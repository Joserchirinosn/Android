<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Subject"
        android:inputType="text"
        android:id="@+id/subjectFeed"
        android:paddingLeft="16dp"
        android:background="@drawable/address_button"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:hint="Message"
        android:id="@+id/messageFeed"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:gravity="clip_vertical"
        android:inputType="textMultiLine"
        android:background="@drawable/address_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#03e1ed"
        android:textColor="#fff"
        android:text="Submit Feedback"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/submitFeed"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#03e1ed"
        android:textColor="#fff"
        android:text="My Feedback History"
        android:textAllCaps="false"
        android:id="@+id/showHistory"
        android:textSize="20sp"
        />
    <ListView
        android:id="@+id/feed_history"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Contact Clean Press Support"
        android:id="@+id/ContactCPS"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:textColor="#FF03E1ED"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.85">

        <Button

            style="@style/IconsSupport"
            android:background="@drawable/call_button"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/support_call"
            android:id="@+id/call_support"
            android:onClick="call"/>
        <Button
            style="@style/IconsSupport"
            android:background="@drawable/sms_button"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:drawableTop="@drawable/tw_white"
            android:id="@+id/twitter_support"
            android:onClick="openTweet"/>

        <Button
            style="@style/IconsSupport"
            android:background="@drawable/fb_button"
            android:drawableTop="@drawable/fb_white"
            android:layout_marginTop="15dp"
            android:id="@+id/fb_support"
            android:onClick="openFB"/>

        <Button
            style="@style/IconsSupport"
            android:background="@drawable/fb_button"
            android:drawableTop="@drawable/fb_white"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/clean_web"
            android:onClick="openWeb"/>

</LinearLayout>
</LinearLayout>